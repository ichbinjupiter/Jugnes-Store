<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.3/font/bootstrap-icons.css">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/dashboard.css" rel="stylesheet" />
</head>
<body class="d-flex flex-column h-100">
    <nav class="navbar navbar-expand-lg sticky-top navbar-dark bg-black flex-md-nowrap p-0 py-2" aria-label="Main navigation">
        <div class="container-fluid">
            <a class="navbar-brand col-md-3 col-lg-2 me-0 px-3 " href="@Url.Action("Index","Product")">Jugnes Oyuncu Pazarı</a>

            <button class="navbar-toggler p-0 border-0" type="button" id="navbarSideCollapse" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse offcanvas-collapse" id="navbarsExampleDefault">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-white" href="#" id="dropdown01" data-bs-toggle="dropdown" aria-expanded="false">Kategori İşlemleri</a>
                        <ul class="dropdown-menu" aria-labelledby="dropdown01">
                            <li><a class="dropdown-item" href="@Url.Action("Index","Category")">Kategori Listesi</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Create","Category")">Kategori Ekle</a></li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-white" href="#" id="dropdown01" data-bs-toggle="dropdown" aria-expanded="false">Marka İşlemleri</a>
                        <ul class="dropdown-menu" aria-labelledby="dropdown01">
                            <li><a class="dropdown-item" href="@Url.Action("Index","Brand")">Marka Listesi</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Create","Brand")">Marka Ekle</a></li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-white" href="#" id="dropdown01" data-bs-toggle="dropdown" aria-expanded="false">Ürün İşlemleri</a>
                        <ul class="dropdown-menu" aria-labelledby="dropdown01">
                            <li><a class="dropdown-item" href="@Url.Action("Index","Product")">Ürün Listesi</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Create","Product")">Ürün Ekle</a></li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-white" href="#" id="dropdown01" data-bs-toggle="dropdown" aria-expanded="false">Ayarlar</a>
                        <ul class="dropdown-menu" aria-labelledby="dropdown01">
                            <li><a class="dropdown-item" href="#">Kişisel Bilgiler</a></li>
                            <li><a class="dropdown-item" href="#">Saygılar</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Index","Login")">Çıkış Yap</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <main class="flex-shrink-0">
        <div class="container-fluid">
            <div class="row">
                <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-dark sidebar collapse">
                    <div class="position-sticky pt-3">
                        <ul class="nav flex-column">
                            <li class="nav-item">
                                <a class="nav-link text-white" aria-current="page" href="@Url.Action("Index","Home")">
                                    <span data-feather="home"></span>
                                    Anasayfa
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" aria-current="page" href="@Url.Action("Index","Product")">
                                    <span data-feather="home"></span>
                                    Tüm Ürünler
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" aria-current="page" href="@Url.Action("IndexActiveProduct","Product")">
                                    <span data-feather="home"></span>
                                    Satıştaki Ürünler
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" aria-current="page" href="@Url.Action("IndexDeActiveProduct","Product")">
                                    <span data-feather="home"></span>
                                    Satış Dışı Ürünler
                                </a>
                            </li>
                        </ul>

                        @*<h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
                                <span>Ayarlar</span>
                                <a class="link-secondary" href="#" aria-label="Add a new report">
                                    <span data-feather="plus-circle"></span>
                                </a>
                            </h6>
                            <ul class="nav flex-column mb-2">
                                <li class="nav-item">
                                    <a class="nav-link" href="#">
                                        <span data-feather="file-text"></span>
                                        Kullanıcı Ayarları
                                    </a>
                                </li>
                            </ul>*@
                    </div>
                </nav>

                <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                    @RenderBody()
                </main>

            </div>
        </div>
    </main>
    <footer class="footer py-4 bg-black fixed-bottom">
        <div class="container-fluid text-white">
            <span class="">Gamnes Türkiyenin Oyuncu Adresi tşk</span>
        </div>
    </footer>

    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>
